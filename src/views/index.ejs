<% include partials/_header %>
   <!-- <pre><%= tasks %></pre> -->

   <nav class="navbar navbar-dark bg-dark mb-4">
      <a href="/" class="navbar-brand">CRUD NodeMongo</a>
   </nav>
   <div class="container">
      <div class="row">
         <!-- Form -->
         <div class="col-md-5">
            <div class="card">
               <div class="card-body">
                  <form action="/add" method="POST">
                     <div class="form-group">
                        <input type="text" placeholder="Title" name="title" class="form-control">                       
                     </div>
                     <div class="form-group">
                        <textarea name="description" cols="30" class="form-control" placeholder="Insert a description"></textarea>
                     </div>
                     <button type="submit" class="btn btn-primary btn-block">ADD</button>
                  </form>
               </div>
            </div>
         </div>
         <!-- List -->
         <div class="col-md-7">
            <table class="table table-bordered table-hover">
               <thead>
                  <tr>
                     <th>NÂ°</th>
                     <th>Title</th>
                     <th>Description</th>
                     <th>Operation</th>
                  </tr>
               </thead>
               <tbody>
                  <% for(var i= 0; i < tasks.length; i++){  %>
                     <!-- <p><%= tasks[i] %></p> -->
                     <tr>
                        <td><%= i + 1 %></td>
                        <td><%= tasks[i].title %></td>
                        <td><%= tasks[i].description %></td>
                        <td>
                           <a href="/turn/<%= tasks[i]._id %>" 
                              class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Done</a>
                           
                           <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Delete</a>
                           <a href="/edit/<%= tasks[i]._id %>" class="btn btn-primary">Edit</a>
                        </td>
                     </tr>
                  <% } %>
               </tbody>
            </table>
         </div>
         
      </div>
   </div>
<% include partials/_footer %>
